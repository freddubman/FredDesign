<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/icone03" />

    <Button
        android:id="@+id/BTTextMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Envoyer un e-mail" />

    <TextView
        android:id="@+id/TVVerifMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Veuillez vérifier votre adresse email"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#F44336" />

    <TextView
        android:id="@+id/TVEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <Button
        android:id="@+id/BTVerifMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CAF50"
        android:text="Envoyer le mail de vérification" />

    <Button
        android:id="@+id/BTDeconnexion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#F44336"
        android:text="déconnexion" />


    <Space
        android:layout_width="match_parent"
        android:layout_height="307dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/BTappel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:visibility="gone"
            app:srcCompat="@drawable/icone01"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/BTrappel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:visibility="gone"
            app:srcCompat="@drawable/icone02"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/BTmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:visibility="gone"
            app:srcCompat="@drawable/icone03"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/BTlinkedin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/icone04"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/BTfacebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/icone05"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/BTRetour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:clickable="false"
            app:srcCompat="@drawable/icone07"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

</LinearLayout>