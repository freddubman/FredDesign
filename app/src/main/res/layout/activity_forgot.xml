<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="345dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/lily_tryout_comicbook" />

    <EditText
        android:id="@+id/ETFMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Entrez votre adresse mail"
        android:inputType="textEmailAddress"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/BTFForgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF5722"
        android:text="RÃ©initialiser le mot de passe" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="197dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/BTappel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:visibility="gone"
            app:srcCompat="@drawable/icone01"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/BTrappel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:visibility="gone"
            app:srcCompat="@drawable/icone02"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/BTmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/icone03"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/BTlinkedin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/icone04"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/BTfacebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/icone05"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/BTRetour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:clickable="false"
            app:srcCompat="@drawable/icone07"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

</LinearLayout>